<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="2dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <Button
            android:id="@+id/PlayerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/CalcButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calculator"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btn_telephony"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Telephony"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <Button
            android:id="@+id/btn_sockets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sockets"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btn_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btn_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btn_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="9sp"
            android:layout_margin="2dp"
            android:backgroundTint="#4A148C"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/image_main_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maintheme"
            android:scaleType="centerInside"
            android:contentDescription="Main Theme Image"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</LinearLayout>
